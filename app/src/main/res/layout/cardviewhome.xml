<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    >
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

      <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/imgav"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_marginBottom="25dp"
              android:src="@drawable/avatar"
              app:shapeAppearanceOverlay="@style/circular"></com.google.android.material.imageview.ShapeableImageView>

          <TextView
              android:id="@+id/tac_gia"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_toRightOf="@+id/imgav"
              android:text="name"
              android:textColor="#0B558F" />

          <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/imgav"
        android:src="@drawable/caymit1"
        >
    </ImageView>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/img"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Tên cây trồng"></TextView>

          <TextView
              android:id="@+id/tv_mota"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_name"
              android:text="mô tả"
              android:textColor="@color/black"
              android:textSize="15dp"
              android:textStyle="italic"></TextView>

          <Button
              android:id="@+id/favorite"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_below="@+id/tv_mota"
              android:layout_marginTop="12dp"
             android:background="@drawable/ic_shadow_favorite_24"
             />

          <TextView
              android:id="@+id/number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_mota"
              android:layout_marginLeft="6dp"
              android:layout_marginTop="15dp"
              android:layout_toRightOf="@+id/favorite"
              android:text="0"
              android:textSize="20dp"></TextView>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/giohang"
              android:layout_marginLeft="250dp"
              android:layout_marginTop="400dp"></Button>
      </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>